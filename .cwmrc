# CWM config file

# Sticky groups: uncomment to enable worskpace-like behavior
sticky			yes

borderwidth		1
color activeborder	"#88C0D0"
color inactiveborder	"#D8DEE9"
color urgencyborder	"#A181C1"

# Menu colors - copied from the .cwmrc i used as a base
# i don't use these menus
color font		"#eeeeee"
color selfont		"#eeeeee"
color menubg		"#161616"
color menufg		"#5294E2"

gap			8 8 8 8

htile			50
vtile			50

moveamount		2

# Key bindings

# Remove all default keybindings
unbind-key		all

bind-key 4-1 group-only-1
bind-key 4-2 group-only-2
bind-key 4-3 group-only-3
bind-key 4-4 group-only-4
bind-key 4-5 group-only-5
bind-key 4-6 group-only-6
bind-key 4-7 group-only-7
bind-key 4-8 group-only-8
bind-key 4-9 group-only-9

bind-key 4-p "rofi -show run"
bind-key 4-Return xterm

bind-key 4M-1 group-toggle-1
bind-key 4M-2 group-toggle-2
bind-key 4M-3 group-toggle-3
bind-key 4M-4 group-toggle-4
bind-key 4M-5 group-toggle-5
bind-key 4M-6 group-toggle-6
bind-key 4M-7 group-toggle-7
bind-key 4M-8 group-toggle-8
bind-key 4M-9 group-toggle-9

bind-key 4S-1 window-movetogroup-1
bind-key 4S-2 window-movetogroup-2
bind-key 4S-3 window-movetogroup-3
bind-key 4S-4 window-movetogroup-4
bind-key 4S-5 window-movetogroup-5
bind-key 4S-6 window-movetogroup-6
bind-key 4S-7 window-movetogroup-7
bind-key 4S-8 window-movetogroup-8
bind-key 4S-9 window-movetogroup-9

bind-key 4-a group-toggle-all
bind-key 4-g window-group

bind-key 4C-r restart
bind-key 4C-q quit

bind-key 4-q window-close
bind-key 4-u window-hide

bind-key 4-x window-fullscreen
bind-key 4-m window-maximize
bind-key 4-t window-htile
bind-key 4S-t window-vtile

bind-key 4-Tab window-cycle
bind-key 4C-Tab window-rcycle

bind-key 4-h window-move-left-big
bind-key 4-j window-move-down-big
bind-key 4-k window-move-up-big
bind-key 4-l window-move-right-big

bind-key 4C-h window-resize-left
bind-key 4C-j window-resize-down
bind-key 4C-k window-resize-up
bind-key 4C-l window-resize-right
bind-key 4S-h window-resize-left-big
bind-key 4S-j window-resize-down-big
bind-key 4S-k window-resize-up-big
bind-key 4S-l window-resize-right-big

bind-key 4M-h window-snap-left
bind-key 4M-j window-snap-down
bind-key 4M-k window-snap-up
bind-key 4M-l window-snap-right

